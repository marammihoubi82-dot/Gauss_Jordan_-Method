

#include <iostream>
using namespace std;

#define MAX 10

int main() {
    cout << "Gauss-Jordan Elimination Program" << endl;
    return 0;
}


int N;
cout << "Enter the number of equations (N <= " << MAX << "): ";
cin >> N;

if (N > MAX || N <= 0) {
    cerr << "Error: N must be between 1 and " << MAX << endl;
    return 1;
}


double A[MAX][MAX];
cout << "Enter the coefficients of matrix A (" << N << "x" << N << "):\n";
for (int i = 0; i < N; i++) {
    for (int j = 0; j < N; j++) {
        cout << "A[" << i + 1 << "][" << j + 1 << "] = ";
        cin >> A[i][j];
    }
}
double B[MAX];
cout << "\nEnter the constants vector B (" << N << " values):\n";
for (int i = 0; i < N; i++) {
    cout << "B[" << i + 1 << "] = ";
    cin >> B[i];
}

