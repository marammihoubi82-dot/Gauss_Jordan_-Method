

#include <iostream>
using namespace std;

#define MAX 10

int main() {
    cout << "Gauss-Jordan Elimination Program" << endl;
    return 0;
}


int N;
cout << "Enter the number of equations (N <= " << MAX << "): ";
cin >> N;

if (N > MAX || N <= 0) {
    cerr << "Error: N must be between 1 and " << MAX << endl;
    return 1;
}


double A[MAX][MAX];
cout << "Enter the coefficients of matrix A (" << N << "x" << N << "):\n";
for (int i = 0; i < N; i++) {
    for (int j = 0; j < N; j++) {
        cout << "A[" << i + 1 << "][" << j + 1 << "] = ";
        cin >> A[i][j];
    }
}
double B[MAX];
cout << "\nEnter the constants vector B (" << N << " values):\n";
for (int i = 0; i < N; i++) {
    cout << "B[" << i + 1 << "] = ";
    cin >> B[i];
}

void gaussJordan(double A[MAX][MAX], double B[MAX], int N) {
    for (int k = 0; k < N; k++) {
        // Steps will be added later
    }
}

for (int k = 0; k < N; k++) {
    double pivot = A[k][k];
    for (int j = 0; j < N; j++) A[k][j] /= pivot;
    B[k] /= pivot;

    for (int i = 0; i < N; i++) {
        if (i == k) continue;
        double factor = A[i][k];
        for (int j = 0; j < N; j++) {
            A[i][j] -= factor * A[k][j];
        }
        B[i] -= factor * B[k];
    }
}if (fabs(A[k][k]) < 1e-9) {
    for (int i = k + 1; i < N; i++) {
        if (fabs(A[i][k]) > fabs(A[k][k])) {
            for (int j = 0; j < N; j++) swap(A[k][j], A[i][j]);
            swap(B[k], B[i]);
            break;
        }
    }
}

if (fabs(A[k][k]) < 1e-9) {
    cerr << "Error: Singular matrix (zero pivot detected)." << endl;
    return;
}




